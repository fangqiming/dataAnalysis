<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.i000.stock.user.dao.mapper.UserLoginMapper">

    <resultMap id="UserLogin" type="com.i000.stock.user.dao.model.UserLogin">
        <id column="id" property="id"/>
        <result column="date" property="date"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="family_name" property="familyName"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="create_time" property="createTime"/>
        <result column="can_see" property="canSee"/>
    </resultMap>


    <select id="getByPhone" resultMap="UserLogin">
        select * from user_login where  `phone`=#{phone}
    </select>


    <select id="getByName" resultMap="UserLogin">
        select * from user_login where  `name`=#{name}
    </select>


</mapper>